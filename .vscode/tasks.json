    "version": "2.0.0",
    // "options": {
    //     "env": {
    //         "cwd": "${workspaceFolder}",
    //         "PYTHONPATH": "${workspaceFolder}${pathSeparator}dpc_lib;${PYTHONPATH}",
    //     },
    // },
    "problemMatcher": [],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true,
    },

    "tasks": [
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "setup.dev.cmd",
        },
        {
            "label": "Upgrade Development Environment",
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat && python -m pip install --upgrade --require-virtualenv --editable .[dev] && python -m pip freeze > requirements.dev.txt",
        },
        {
            "label": "Security Check",
            "group": "test",
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat && safety check"
        },
        {
            "label": "Lint Source Files",
            "group": "test",
            "type": "shell",
            // "command": ".venv\\Scripts\\activate.bat && pylint --output-format parseable,colorized ./src ./test",
            "command": ".venv\\Scripts\\activate.bat && pylint --output-format parseable,colorized ./src",
        },
        {
            "label": "Test",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat && pytest",
        },
        {
            "label": "Format Source Files",
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat && yapf --in-place --recursive ./src ./test",
        },
        {
            "label": "Build for Distribution",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat && python -m build"
        },

        // {
        //     "label": "Get TestPyPI upload token",
        //     // "detail": "Check if token stored in keyring. Useful if running upload manually.",
        //     "group": "test",
        //     "type": "process",
        //     "command": "pipenv",
        //     "args": [
        //         "run",
        //         "keyring",
        //         "get",
        //         "https://test.pypi.org/legacy/",
        //         "__token__",
        //     ],
        // },

        // # https: //test.pypi.org/project/pydtm-lib/
        // deploy-test = "pipenv run twine upload --verbose --username __token__ --repository testpypi dist/*"
        // # deploy-production = "pipenv -q run python -m twine upload -repository pypi dist/*"

        {
            "label": "Upload to TestPyPI",
            "group": "build",
            "type": "shell",
            "command": ".venv\\Scripts\\activate.bat && deploy-test",
        },
    ]
}
