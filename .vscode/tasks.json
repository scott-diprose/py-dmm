    //         "PYTHONPATH": "${workspaceFolder}${pathSeparator}dpc_lib;${PYTHONPATH}",
    //     },
    // },
    "problemMatcher": [],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true,
    },
    "tasks": [
        {
            "label": "Check for security vulnerabilities",
            "group": "build",
            "type": "process",
            "command": "pipenv",
            "args": [
                "run",
                "security-check",
            ],
        },
        {
            "label": "Lint source files",
            "group": "test",
            "type": "process",
            "command": "pipenv",
            "args": [
                "run",
                "lint-src",
            ],
        },
        {
            "label": "Build for Distribution",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "process",
            "command": "pipenv",
            "args": [
                "run",
                "build-src",
            ],
        },
        // {
        //     "label": "Get TestPyPI upload token",
        //     // "detail": "Check if token stored in keyring. Useful if running upload manually.",
        //     "group": "test",
        //     "type": "process",
        //     "command": "pipenv",
        //     "args": [
        //         "run",
        //         "keyring",
        //         "get",
        //         "https://test.pypi.org/legacy/",
        //         "__token__",
        //     ],
        // },
        {
            "label": "Upload to TestPyPI",
            "group": "test",
            "type": "process",
            "command": "pipenv",
            "args": [
                "run",
                "deploy-test",
            ],
        },
    ]
}
