[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[requires]
python_version = "3.10"

[dev-packages]
yapf = "*"
pylint = "*"
pytest = "*"
build = "*"
twine = "*"
# pre-commit = "*"
# bump2version = "*"
# pydtm = {path = ".", extras = ["dev"], version="*", editable = true}

[packages]
# pipenv is used for dev environment setup only
# refer to dependencies in pyproject.toml

[scripts]
dev-setup = "python setup.py clean --all install"
lock-dev-setup = "pipenv install -e ."
security-check = "pipenv check"
lint-src = "pipenv run pylint --output-format parseable,colorized src"
build-src = "pipenv run python -m build"
# https://test.pypi.org/project/pydtm-lib/
deploy-test = "pipenv run twine upload --verbose --username __token__ --repository testpypi dist/*"
# deploy-production = "pipenv -q run python -m twine upload -repository pypi dist/*"
